# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET     /               controllers.Application.index

GET     /stories        controllers.Application.showStories
GET     /stories/new    controllers.Application.showNewStoryForm
#GET     /stories/:storyId          controllers.Application.postsx
#GET     /stories/:storyId/posts     controllers.Application.posts(storyId: String
POST    /stories/new    controllers.Application.newStory

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
